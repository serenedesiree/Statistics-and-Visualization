#pd.set_option("display.max_rows", None, "display.max_columns", None)
import numpy

df = pd.read_csv('''D:/Coding/Python/Kaggle/Sydney Airbnb/listings.csv''')


# delete any rows with 'nan' in the neighborhood cell

df.dropna(subset = ["neighbourhood"], inplace=True)

print(df['neighbourhood'])


neighbourhood = df['neighbourhood']



#1. Detect when first comma begins, if space is before that, get rid of space. 
#2. Get rid of everything after comma. State not necessary. 

pattern = r'[,| ,].*$'

for name in neighbourhood:
    print(name)
    new_name = re.sub(pattern,'', name)
    print('2',new_name)
    


x = (df.groupby(['neighbourhood']).number_of_reviews_ltm.sum())


